<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    >


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:cardElevation="6dp"
        >



        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/bg1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello vamsi!"
            android:layout_marginTop="30dp"
            android:id="@+id/profile_nametv"
            android:textColor="@color/White"
            android:layout_gravity="center_horizontal"
            android:textSize="20dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vamsik586@gmail.com"
            android:layout_marginTop="70dp"
            android:layout_gravity="center_horizontal"
            android:textSize="15dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You are in JALANDHAR"
            android:layout_marginTop="95dp"
            android:layout_gravity="center_horizontal"
            android:textSize="15dp"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/crdv"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="300dp"
        app:cardElevation="6dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/White">

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Your Details"
                android:id="@+id/profile_details"
                android:textColor="@color/Black"
                android:background="@color/betterwhite"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Your Bookings"
                android:textColor="@color/Black"
                android:background="@color/betterwhite"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/profile_wallet"
                android:text="My wallet"
                android:textColor="@color/Black"
                android:background="@color/betterwhite"
                android:onClick="openWallet"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/profile_contact"
                android:onClick="onProfile"
                android:text="Contact Us"
                android:textColor="@color/Black"
                android:background="@color/betterwhite"/>


            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/profile_about"
                android:onClick="onProfile"
                android:text="About us"
                android:textColor="@color/Black"
                android:background="@color/betterwhite"/>


        </LinearLayout>
    </android.support.v7.widget.CardView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/profile_logout"
        android:layout_marginTop="20dp"
        android:onClick="logout"
        android:text="Sign Out"/>
</LinearLayout>