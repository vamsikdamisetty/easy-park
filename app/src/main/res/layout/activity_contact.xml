<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Contact"
    android:orientation="vertical"
    android:background="@color/White">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/Black"
        app:cardBackgroundColor="@color/Black"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Want to reach us ?"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/crdv"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="300dp"
        app:cardElevation="6dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/White">

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="8978504999"
                android:id="@+id/contact_1"
                android:onClick="contact"
                android:textColor="@color/Black"
                android:background="@color/betterwhite"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="9878875418"
                android:id="@+id/contact_2"
                android:onClick="contact"
                android:textColor="@color/Black"
                android:background="@color/betterwhite"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/contact_3"
                android:onClick="contact"
                android:text="9887850464"
                android:textColor="@color/Black"
                android:background="@color/betterwhite"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/contact_4"
                android:text="7845621378"
                android:textColor="@color/Black"
                android:background="@color/betterwhite"
                android:onClick="contact"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:onClick="contact"
                android:id="@+id/contact_5"
                android:text="9754863216"
                android:textColor="@color/Black"
                android:background="@color/betterwhite"/>


        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>